# SIP Phone API Environment Variables
# Copy this file to .env and customize for your environment

# Hardware Configuration
HT802_PASSWORD=your-ht802-password

# Webhook Configuration
DTMF_WEBHOOK_URL=https://your-server.com/webhooks/dtmf
DTMF_WEBHOOK_SECRET=your-dtmf-webhook-secret
STATE_WEBHOOK_URL=https://your-server.com/webhooks/state
STATE_WEBHOOK_SECRET=your-state-webhook-secret

# Operator Server Configuration
OPERATOR_URL=https://operator.your-domain.com
OPERATOR_API_KEY=your-operator-api-key

# API Security
API_KEY_1=your-first-api-key
API_KEY_2=your-second-api-key

# SSL Configuration (if enabled)
SSL_CERT_PATH=/path/to/your/cert.crt
SSL_KEY_PATH=/path/to/your/key.key

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_PATH=/var/log/sip_phone.log

# Development Settings
MOCK_HARDWARE=false  # Set to true to use mock HT802
DEBUG_DTMF=false    # Enable for DTMF debugging
DEBUG_AUDIO=false   # Enable for audio debugging

# Optional: Override default configuration
API_HOST=0.0.0.0
API_PORT=8000
SIP_SERVER=udp:sip.your-provider.com:5060
HT802_HOST=192.168.1.100
HT802_PORT=5060

# Optional: Performance tuning
EVENT_QUEUE_SIZE=1000
WORKER_THREADS=4
WEBSOCKET_PING_INTERVAL=30
REQUEST_TIMEOUT=30
